{# templates/commentaire/editCommentaire.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}

    <h1>Edit Commentaire</h1>

    {{ form_start(form) }}
        <div class="form-group row">
            <div class="col-md-6">
                {{ form_label(form.text) }}
                {{ form_widget(form.text, {'attr': {'class': 'form-control', 'rows': 8, 'placeholder': 'Edit your comment here...'}}) }}
            </div>

            <div class="col-md-2">
                {{ form_label(form.evaluation) }}
                {{ form_widget(form.evaluation, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    {{ form_end(form) }}

    
{% endblock %}
